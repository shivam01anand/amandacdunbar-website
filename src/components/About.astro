<style>
  .about-section {
    padding: var(--step-4) var(--step-1); /* Vertical and horizontal padding */
    background-color: white; /* Contrast with sand background */
    margin: 2rem 0; /* Space above and below */
  }

  .container {
    max-width: 800px; /* Limit content width for readability */
    margin: 0 auto; /* Center the container */
    padding: 0 var(--step-0);
  }

  h2 {
    text-align: center;
    margin-bottom: 1.5em;
    color: var(--color-teal);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5em;
  }

  .about-content p {
    font-size: var(--step-0);
    line-height: 1.7;
    color: var(--color-navy);
    max-width: 65ch; /* Optimal reading line length */
    margin: 0 auto 1.5em auto; /* Center text block */
    text-align: center; /* Or left-align if preferred */
  }

  @media (min-width: 768px) {
     .about-content p {
       text-align: left;
     }
  }


  .badges {
    display: flex;
    flex-wrap: wrap; /* Allow badges to wrap on smaller screens */
    justify-content: center;
    gap: 0.8rem 1.2rem; /* Row and column gap */
    margin-top: 2rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    background-color: var(--color-sand);
    color: var(--color-navy);
    padding: 0.4em 0.9em;
    border-radius: 20px;
    font-size: var(--step--1);
    font-weight: 500;
    border: 1px solid var(--color-blush); /* Subtle border */
  }

  .badge-icon {
    margin-right: 0.5em;
    /* Optional: slightly larger icon */
    /* font-size: 1.1em; */
  }

  .social-icon {
    width: 24px;
    height: 24px;
    color: var(--color-teal);
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .social-icon:hover,
  .social-icon:focus {
    color: var(--color-blush);
    transform: scale(1.1);
  }
</style> 